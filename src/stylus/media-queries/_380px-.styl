@media screen and (max-width: 380px)
  //home
  .hero
    background-image: url(../../../images/pc-mini.jpeg)
    overflow hidden

  .hero-image 
    margin-top: 12vh;
    margin-bottom: 20px
    img 
      height 32vh

  .principal-title 
    font-size: 34px
    span 
      font-size: 28px

  .arrow-down 
    margin-top 23px

  .fa-arrow-down
    font-size: 35px

  .social-link
   width 39.5px
   height 39.5px
   font-size: 39.5px
   background-size 39.5px 39.5px

   //about
  .about 
    min-height: 0
    &-title 
      font-size 35px 
      padding-top: 2vh
      margin-bottom: 15px
    &-details 
      max-width 85%
      
  .stack 
    max-width 85%
    margin: 25px auto
    margin-top: 15px

  //portfolio

  .portfolio 
    &-title 
      padding-top: 3vh

  .projects 
    grid-template-columns: 1fr
    padding: 0 6vw

    