@media screen and (max-width: 480px)
  header 
    height 100vh
    display: none
  
  .backdrop
    background: rgba(0, 0, 0, .6)
    backdrop-filter: blur(10px)

  .menu
    position: absolute
    top: 0 
    bottom: 0
    left 0
    right 0
    height 100%
    ul 
      height 100%
      flex-direction: column
      align-items: center
      li 
        margin: 15px 0
