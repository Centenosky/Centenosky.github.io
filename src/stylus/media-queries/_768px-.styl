@media screen and (max-width: 768px)
  #icon-container 
    display: flex

  .toggle-icon 
    left: 83%
  //home
  header 
    height 100vh
    z-index 0
    // display: none

  .menu
    position: absolute
    top: 0 
    bottom: 0
    right 0
    width 60%
    justify-content: center
    display: none
    animation 1s toRight both
    background: rgba(0, 0, 0, .85)
    ul 
      height 100%
      flex-direction: column
      align-items: center
      li 
        margin: 15px 0

  .visible 
    display: flex
    backdrop-filter: blur(10px)
    transition: 1s all