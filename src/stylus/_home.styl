header
  position: absolute
  height: 10vh
  width: 100%
  display: flex
  flex-wrap: wrap
  align-items: center
  justify-items: center
  animation: 1s fadeInDown forwards
  transition: .5s
  z-index: 2

.menu 
  width: 100%
  ul
    display: flex
    justify-content: center
    list-style: none

.backdrop
  backdrop-filter: blur(5px)
  transition: 1s all

.menu a 
    font-size: font-size-normal
    font-family: fuente1
    text-decoration: none
    margin: 0 13px
    color: white
    opacity: .8
    transition: .8s ease-out
    position: relative
    padding-bottom: 5px
    &:before
      content: "";
      width: 0
      height: 3px
      background: color-secundary
      position: absolute
      left: 50%
      bottom: 0
      transition: all .5s
    &:hover
      opacity: 1
      &:before
        width: 100%
        left: 0

.hero
  background-image: url(../../images/pc.jpeg)
  background-position: center
  background-size: cover
  background-repeat: no-repeat
  height: 100vh
  display: grid
  grid-template-rows: 1fr 1fr
  justify-content: center

.opacity
  background: rgba(0, 0, 0, .3)
  width: 100vw
  height: 100vh

.hero-image
  margin-top: 18vh
  text-align: center
  margin-bottom: 10px
  animation: 1s fadeIn ease-in
  img 
    border-radius: 50%
    height 36vh

.principal-title 
  font-size 40px
  line-height 1.4
  letter-spacing -.2px
  color color-primary
  text-align center
  font-family fuente2
  animation 1s fadeInUp forwards
  strong 
    color color-secundary
  span 
    font-size 34px
    text-align center

.arrow-down 
  text-align center
  margin-top 20px

.fa-arrow-down
  font-size: 33px
  color color-primary
  opacity .8
  animation .9s arrow infinite
  &:hover
    transition .9s opacity ease
    opacity 1
    transform scale(1.15)

.social-media 
  display flex
  position absolute
  bottom 0
  width 100%
  height 12vh
  background rgba(0, 0, 0, .3)
  align-items center
  justify-content center

.social-link
   display flex
   align-items center
   width 40px
   height 40px
   font-size: 40px
   color color-primary
   opacity .8
   margin 0 20px
   background-size 40px 40px
   text-decoration none
   transition .9s ease-out
   &:hover
    opacity 1
    scale(1.08)

.toLeft
  animation 1s toLeft forwards
  display flex

.toRight
  animation 1s toRight forwards
  display flex

.social-link.twitter
  background-image url("../../iconos/twitter.svg")

.social-link.facebook
  background-image url("../../iconos/facebook.svg")

.social-link.instagram 
  background-image: url("../../iconos/instagram.svg")

.social-link.github 
  background-image: url("../../iconos/github.svg")