@keyframes arrow 
  50% 
    transform: translateY(6px)
  100% 
    transform: translateY(0)

@keyframes fadeIn 
  from 
    opacity: 0
  to 
    opacity: 1
  
@keyframes fadeInUp 
  0% 
    transform: translateY(200%)
    opacity: 0
  100% 
    transform: translateY(0)
    opacity: 1

@keyframes fadeInDown 
  0% 
    transform: translateY(-200%)
    opacity: 0
  100% 
    transform: translateY(0)
    opacity: 1

@keyframes toLeft 
  from 
    transform: translateX(-400%)
    opacity: 0
  to 
    transform: translateX(0)
    opacity: 1

@keyframes toRight 
  from 
    transform: translateX(400%)
    opacity: 0
  to 
    transform: translateX(0)
    opacity: 1

@keyframes scale
  0% 
    transform: scale(1)
  50%
    transform: scale(1.08)
  100% 
    transform: scale(1)