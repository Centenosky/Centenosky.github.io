.contact 
  display: grid
  grid-template-rows: 1fr 1fr 1fr
  width: 100%
  height 40px
  align-items: top
  justify-content: center
  &-title 
    color: color-primary
    font-family: fuente2
    font-size: 25px
    margin: 20px auto
  &-button 
    margin: 0 auto
    text-decoration: none

.link-contact-button 
  margin: 0 auto
  text-decoration: none

.social 
  display: flex
  justify-content: center
  margin-bottom: 20px
  &-link:hover 
    opacity: 1
    transform: scale(1.08)
    animation: 0

footer 
  display: flex
  flex-direction: column
  font-size: 13px
  color: color-primary
  align-items: center
  opacity: .8
  padding: 15px
  padding-top: 20px
